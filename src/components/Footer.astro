---
import siteConfig from "../data/site-config";

const socialLinks = siteConfig.socialLinks || [];
const navLinks = siteConfig.footerNavLinks || [];
---

<footer class="footer">
  <!-- {
    navLinks.length > 0 && (
      <div class="mb-4 flex flex-wrap gap-x-6 gap-y-1">
        {navLinks.map((link) => (
          <a class="" href={link.href}>
            {link.text}
          </a>
        ))}
      </div>
    )
  } -->
  <div class:list={["", { "": socialLinks.length > 0 }]}>
    {
      socialLinks.length > 0 && (
        <div class="flex flex-wrap gap-x-4 gap-y-1">
          {socialLinks.map((link) => (
            <a
              class=""
              href={link.href}
              target="_blank"
              rel="noopener noreferer"
            >
              {link.text}
            </a>
          ))}
        </div>
      )
    }
    <p class="text-sm">
      &copy; {new Date().getFullYear()}&nbsp;<a class="" href="/"
        >{siteConfig.title}</a
      >. All rights reserved.
    </p>
  </div>
</footer>


<style>
  .footer {
    margin-top: 2rem;
    text-align: center;
  }
</style>
